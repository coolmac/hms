<div class="container" style="width:30%">
<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter email" %></div>

  <br />
  <div><%= f.submit "Resend confirmation instructions", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>