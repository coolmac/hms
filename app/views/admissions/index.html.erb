<h1>Listing admissions</h1>

<table>
  <tr>
    <th>Visit</th>
    <th>Admission date</th>
    <th>Bed</th>
    <th>Doctor</th>
    <th>Is mlc</th>
    <th>Mlc details</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admissions.each do |admission| %>
  <tr>
    <td><%= admission.visit_id %></td>
    <td><%= admission.admission_date %></td>
    <td><%= admission.bed %></td>
    <td><%= admission.doctor %></td>
    <td><%= admission.is_mlc %></td>
    <td><%= admission.mlc_details %></td>
    <td><%= admission.description %></td>
    <td><%= link_to 'Show', [admission.visit, admission] %></td>
    <td><%= link_to 'Edit', edit_visit_admission_path(admission.visit, admission) %></td>
    <td><%= link_to 'Destroy', [admission.visit, admission], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

