<div class="smart-form client-form animated fadeInDown" style="padding:20px">
	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      		<div class="well no-padding">
      			<header>Prescription Medicines</header>
				<%= form_for([@prescription_medicine.favourite_prescription, @prescription_medicine]) do |f| %>
				  <% if @prescription_medicine.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@prescription_medicine.errors.count, "error") %> prohibited this prescription from being saved:</h2>

				      <ul>
				      <% @prescription_medicine.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
				  <fieldset>
			   		  <section>
			            <h3><label> Medicine Name </label></h3>
			  			<%= f.text_field :medicine, :calss => "fav_prescription_text", :style=>"padding:4px;" %>
			          </section>

			          <br />

			  		  <section>
			            <h3><%= f.label :frequency %></h3>
			            <%= f.text_field :frequency, :list=>"list2", :style=>"padding:4px;"  %>
			              <datalist id="list2">
			                <option value="OD">OD</option>
			                <option value="OM">OM</option>
			                <option value="HS">HS</option>
			                <option value="BD">BD</option>
			                <option value="TDS">TDS</option>
			                <option value="QID">QID</option>
			              </datalist>
			  		  </section>

			          <br />

			          <section>
			            <h3><%= f.label :duration %></h3>
			            <%= f.text_field :duration, :list=>"list3", :style=>"padding:4px;"  %>
			              <datalist id="list3">
			                <option value="1day">1day</option>
			                <option value="2days">2days</option>
			                <option value="3days">3days</option>
			                <option value="4to6days">4-6days</option>
			                <option value="1week">1week</option>
			                <option value="2weeks">2weeks</option>
			                <option value="3weeks">3weeks</option>
			                <option value="1month">1month</option>
			                <option value="2months">2months</option>
			                <option value="3months">3months</option>
			                <option value="6months">6months</option>
			                <option value="1year">1year</option>
			              </datalist>
			          </section>

			          <br />

			          <section>
			            <h3><%= f.label :route %></h3>
			            <%= f.text_field :route, :list=>"list4", :style=>"padding:4px;"  %>
			              <datalist id="list4">
			                <option value="im">im</option>
			                <option value="iv">iv</option>
			                <option value="po">po</option>
			                <option value="pr">pr</option>
			                <option value="intramuscular">intramuscular</option>
			                <option value="intravenous">intravenous</option>
			                <option value="per-oral">per oral</option>
			                <option value="per-rectal">per rectal</option>
			              </datalist>
			          </section>
			          <footer>
						  <input class="btn btn-primary fav_prescription_button" name="commit" type="submit" value="Submit">
			          </footer>
			      </fieldset>
				          
				<% end %>
			</div>
	</div>
</div>
