
<h1> HISTORY </h1>

 <%= form_for @current_visit, url: show_examinations_path(), html: {class: "smart-form client-form", role:"form" } do |f| %>
  <% if @current_visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@current_visit.errors.count, "error") %> prohibited this visit from being saved:</h2>
      <ul>
      <% @current_visit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :chief_complaint %> -->
    <%= link_to 'Chief Complaint', chief_complaint_path(:category => 'chief_complaint', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :chief_complaint, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="field">
    <!-- <%= f.label :pms_history %><br /> -->
    <%= link_to 'Past Medical Surgical History', pms_history_path(:category => 'pms_history', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :pms_history, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="field">
    <!-- <%= f.label :fm_history %><br /> -->
    <%= link_to 'Family Medical History', fms_history_path(:category => 'fms_history', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :fm_history, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="field">
    <!-- <%= f.label :ps_history %><br /> -->
    <%= link_to 'Personal/Social History', ps_history_path(:category => 'ps_history', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :ps_history, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="field">
    <!-- <%= f.label :treatment_history %><br /> -->
    <%= link_to 'Treatment History', treatment_history_path(:category => 'treatment_history', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :treatment_history, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="field">
    <!-- <%= f.label :other_systems %><br /> -->
    <%= link_to 'Other Systems', other_systems_history_path(:category => 'other_systems_history', :super_category => 'history'), :class => "btn btn-primary"%>
    <%= f.text_area :other_systems, :autofocus => true, class: "form-control", cols:4, rows:2 %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :name => 'save', :class => "btn btn-success"%>
    <%= f.submit 'Next', :name => 'next', :class => "btn btn-success"%>
  </div>
 <% end %>




