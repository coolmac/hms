
<%if !@sc_visit_questions.blank?%>
  <table class="table">
    <tr>
    <th> Question </th>
    <th> Category </th>
    <th> Answer </th>
    </tr>
  <% @sc_visit_questions.each do |eaq| %>
    <tr>
    	<% #TODO Don't make another SQL query, fetch it from existing activerecord object %>
    	<td> <%= @questions.find_by_id(eaq.question_id).title %> </td>
    	<td> <%= @questions.find_by_id(eaq.question_id).category %> </td>
    	<td> <%= Answer.find(eaq.answer_id).title %> </td>
    </tr>
  <% end %>
  </table>
<%end%>


