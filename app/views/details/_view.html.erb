
<section>
<div class="row pad">
  <% @common_questions.each do |q| %>

    <table class="question_table">
      <tr style="height:30px;">
        <td >
          <b><%= q.title%></b>&nbsp;:&nbsp;&nbsp;</b>
        </td>
        <td>
          <% if !get_selected_answer_id("#{APP_CONFIG['question_prefix']}#{q.id}").blank? %>
            <%= Answer.find(get_selected_answer_id("#{APP_CONFIG['question_prefix']}#{q.id}")).title%>
          <%end%>  
        </td>
      </tr>
    </table>
<% end %>
</div>
</section>

<section>
<div class="row pad">
  <% @questions.each do |q| %>

    <table class="question_table">
      <tr style="height:30px;">
        <td >
          <b><%= q.title%></b>&nbsp;:&nbsp;&nbsp;</b>
        </td>
        <td>
          <% if !get_selected_answer_id("#{APP_CONFIG['question_prefix']}#{q.id}").blank? %>
            <%= Answer.find(get_selected_answer_id("#{APP_CONFIG['question_prefix']}#{q.id}")).title %>&nbsp;&nbsp;&nbsp;&nbsp;
          <%end%> 
        </td>
      </tr>
    </table>
<% end %>
</div>
<br>
</section>


<% @common_descriptive_questions.each do |dq| %>
  <section>
      <h3><%= label_tag dq.title%></h3>
        <%= get_selected_answer_id("#{APP_CONFIG['descriptive_question_prefix']}#{dq.id}") %>
      <br>
      <br>
  </section>
<% end %>

<% @descriptive_questions.each do |dq| %>
  <section>
      <h3><%= label_tag dq.title%></h3>
        <%= get_selected_answer_id("#{APP_CONFIG['descriptive_question_prefix']}#{dq.id}") %>
      <br>
      <br>
  </section>
<% end %>

<%if !@investigations.blank? %>
<section>
  <table class="table table-bordered table-hover">
    <th>Field</th>
    <th>Value</th>
    <th>Units</th>
    <th>Normal Range</th>
    <% @investigations.each do |dq| %>
    <tr>
      <td> <%= label_tag dq.title%> </td>
      <td> <%= get_selected_answer_id("#{APP_CONFIG['investigation_prefix']}#{dq.id}") %></td>
      <td> <%= label_tag dq.units %> </td>
      <td> <%= label_tag "(#{dq.normal_min} - #{dq.normal_max})" %> </td>
    </tr>
    <% end %>
  </table>
</section>
<%end%>

