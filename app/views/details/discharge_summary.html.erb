<div id="summary_div" class="summary_div">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    	<div class="well no-padding">
      		<header><i class="fa fa-list-alt"></i>&nbsp;Discharge Summary</header>
			<div id="summary_form"></br>
				<%= form_tag("/discharge_summary", id: "summary_form", method: "get") do %>
					<table class="table table-responsive">
						<tr>
							<td>
								<input type="checkbox" name="history_cb" id="history_cb" value="history" onclick="show_sub_category('history')"/> <label for="history_cb"><b>HISTORY</b></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

								<input type="checkbox" name="investigation_cb" id="investigation_cb" value="investigation" onclick="show_sub_category('investigation')"/> <label for="investigation_cb"><b>INVESTIGATION</b></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

								<input type="checkbox" name="prescription_cb" id="prescription_cb" value="prescription" /> <label for="prescription_cb"><b>PRESCRIPTION</b></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

								<input type="checkbox" name="follow_up_cb" id="follow_up_cb" value="follow_up" /> <label for="follow_up_cb"><b>FOLLOW UP</b></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

								<input type="checkbox" name="diagnosis_cb" id="diagnosis_cb" value="diagnosis" /> <label for="diagnosis_cb"><b>DIAGNOSIS</b></label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

								<input type="checkbox" name="admission_cb" id="admission_cb" value="admission" onclick="get_admit_days()"/> <label for="admission_cb"><b>ADMISSION</b></label>
							</td>
						</tr>
					</table>

					<div id="sub_category_div">
					</div></br>
					<footer>
						<button type="button" class="btn btn-primary" onclick="get_summary()">Generate Summary</button>

						<button type="submit" name="submit" class="btn btn-primary" >Generate PDF</button>
					</footer>
				<%end%>
			</div></br>
		</div>
	</div>
	<div id="summary_content">
		<%if @history == "history"%>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    			<div class="well no-padding">
      				<h3 class="summary_content_h3">History</h3>
					<%= render "discharge_history"%>
				</div>
			</div>	
		<%end%>

		<%if @investigation == "investigation"%>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    			<div class="well no-padding">
      				<h3 class="summary_content_h3">Investigation</h3>
					<%= render "discharge_investigation"%>
				</div>
			</div>	
		<%end%>

		<%if @prescription == "prescription"%>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    			<div class="well no-padding">
      				<h3 class="summary_content_h3">Prescription</h3>
					<%= render "discharge_prescription"%>
				</div>
			</div>	
		<%end%>

		<%if @follow_up == "follow_up"%>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    			<div class="well no-padding">
      				<h3 class="summary_content_h3">Follow Up</h3>
					<%= render "discharge_follow_up"%>
				</div>
			</div>	
		<%end%>

		<%if @admission == "admission"%>
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 smart-form client-form">
    			<div class="well no-padding">
      				<h3 class="summary_content_h3">Admission</h3>
					<%= render "discharge_admission"%>
				</div>
			</div>	
		<%end%>

	</div>
</div>
<% if @pdf%>
	<style>
		#over-the-top {
			display:none !important;
		}
	  	#summary_form {
	    	display:none;
	  	}
	</style>
<%end%>