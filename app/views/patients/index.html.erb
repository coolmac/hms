<div class="table-responsive animated fadeInDown">

  <table id="resultTable" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Mobile</th>
        <th>Email</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.mobile %></td>
          <td><%= patient.email %></td>
          <td><%= link_to 'Show', patient, :class=>"btn btn-xs btn-primary" %></td>
          <td><%= link_to 'Edit', edit_patient_path(patient), :style => "color:black" %></td>
          <td><%= link_to 'Remove', patient, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color:black"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

