<div id="content" class="animated fadeInDown" overflow="scroll">
    <%= form_for(@patient, html: { class: "smart-form client-form", role:"form" } ) do |f| %>
      <% if @patient.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
          <ul>
          <% @patient.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="well no-padding">

      <header>Necessary Information</header>

        <fieldset>
          <section>
            <div class="form-group col-md-3 col-lg-3">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, :autofocus => true, class: "form-control", placeholder: "First Name" %>
            </div>
            <div style="margin-bottom:15px"></div>
            <div class="col-md-1 col-lg-1"></div>
            <div class="form-group col-md-4 col-lg-4">
                <%= f.label :middle_name %><br />
                <%= f.text_field :middle_name, class: "form-control", placeholder: "(optional)" %>
            </div>
            <div style="margin-bottom:15px"></div>
            <div class="col-md-1 col-lg-1"></div>
            <div class="form-group col-md-3 col-lg-3">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
            </div>
          </section>
          &nbsp;
          <section>
            <div class="form-group">
                <%= f.label :date_of_birth %><br />
                <%= f.date_select :date_of_birth, {:order => [:month, :day, :year],:prompt => true, :use_two_digit_numbers => true, :start_year => 1900, :end_year => 2014} %>
            </div>
          </section>

          <section>
            <div class="form-group">
                <%= f.label :age %><br />
                <%= f.number_field :age, class: "form-control", placeholder: "Age" %>
            </div>
          </section>

          <section>
            <div class="form-group">
                <%= f.label :gender %><br />
                <%= f.text_field :gender, class: "form-control", placeholder: "Male/Female" %>
            </div>
          </section>

          <section>
            <div class="form-group">
                <%= f.label :mobile %><br />
                <%= f.text_field :mobile, class: "form-control", placeholder: "Mobile No." %>
            </div>
          </section>

          <section>
            <div class="form-group">
                <%= f.label :email %><br />
                <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
          </section>
          <section>
            <%=f.fields_for :address do |address_form| %>
              <%= address_form.label :building %>
              <%= address_form.text_field :address_line1, class: "form-control", placeholder: "Building"%>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :street %>
              <%= address_form.text_field :address_line2, class: "form-control", placeholder: "Street"%>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :nearest_milestone %>
              <%= address_form.text_field :address_line3, class: "form-control", placeholder: "Nearest Milestone"%>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :city %>
              <%= address_form.text_field :city, class: "form-control", placeholder: "City" %>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :district %>
              <%= address_form.text_field :district, class: "form-control", placeholder: "District" %>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :state %>
              <%= address_form.text_field :state, class: "form-control", placeholder: "State" %>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :pin_code %>
              <%= address_form.text_field :pin_code, class: "form-control", placeholder: "Pin Code" %>
              <div style="margin-bottom:15px"></div>
              <%= address_form.label :country %>
              <%= address_form.text_field :country, class: "form-control", placeholder: "Country" %>
            <% end %>

          </section>

          <section>
            <div class="form-group">
                <%= f.label :nationality %><br />
                <%= f.text_field :nationality, class: "form-control", placeholder: "Nationality" %>
            </div>
          </section>

          <section>
            <div class="form-group">
                <%= f.label :occupation %><br />
                <%= f.text_field :occupation, class: "form-control", placeholder: "Occupation" %>
            </div>
          </section>
        </fieldset>
        </div>
      </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="well no-padding">

          <fieldset>
            <section>
              <div class="form-group">
                  <%= f.label 'Patient Type' %><br />
                  <%= f.text_field :patient_type, class: "form-control", placeholder: "Patient Type" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Patient ID Type' %><br />
                  <%= f.text_field :id_type, class: "form-control", placeholder: "ID Type" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Patient ID Number' %><br />
                  <%= f.text_field :id_number, class: "form-control", placeholder: "ID Number" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Emergency Name' %><br />
                  <%= f.text_field :emergency_name, class: "form-control", placeholder: "Emergency Name" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Emergency Mobile Number' %><br />
                  <%= f.text_field :emergency_mobile, class: "form-control", placeholder: "Number" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Reference Name' %><br />
                  <%= f.text_field :reference_name, class: "form-control", placeholder: "Reference Name" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Reference Mobile Number' %><br />
                  <%= f.text_field :reference_mobile, class: "form-control", placeholder: "Number" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Insurance Provider' %><br />
                  <%= f.text_field :insurance_provider, class: "form-control", placeholder: "Insurance provider" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Insurance Policy Number' %><br />
                  <%= f.text_field :insurance_policy_number, class: "form-control", placeholder: "Insurance policy Number" %>
              </div>
            </section>

            <section>
              <div class="form-group">
                  <%= f.label 'Religion' %><br />
                  <%= f.text_field :religion, class: "form-control", placeholder: "Religion" %>
              </div>
            </section>
          </fieldset>

        <footer>
            <div>
                <%= f.submit "Create Entry", class: "btn btn-primary" %>
            </div>
        <% end %>
        </footer>
      </div>
    </div>
  </div>