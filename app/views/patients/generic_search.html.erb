<div class="table-responsive animated fadeInDown" style="padding-top:5px">
	<table id="resultTable" class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>UHID</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Mobile</th>
				<th>Email</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% if @exact_result_found %>
				<h1 class="font-md"> Search Result based on exact input: </h1><br />
				<%@exact_results.each do |er|%>
				<tr class="search_result_tr" onclick="window.location='/patients/<%=er.id%>'">
					<td><%=er.uhid%></td>
					<td><%=er.first_name%></td>
					<td><%=er.last_name%></td>
					<td><%=er.mobile%></td>
					<td><%=er.email%></td>
					<td><span class="label label-success"><%= link_to 'Select', er %> </span> </td>
				</tr>
				<% end %>

				<% else %>
				<h1 class="font-md"><%=@comments%></h1>
				<%@fuzzy_results.each do |fr|%>
				<tr class="search_result_tr" onclick="window.location='/patients/<%=fr.id%>'">
					<td><%=fr.uhid%></td>
					<td><%=fr.first_name%></td>
					<td><%=fr.last_name%></td>
					<td><%=fr.mobile%></td>
					<td><%=fr.email%></td>
					<td><span class="label label-primary"><%= link_to 'Select', fr, :style=>"color:white" %></span></td>
				</tr>
				<% end %>

			<% end %>
		</tbody>
	</table>
	</div>

</div>




