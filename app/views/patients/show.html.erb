<p id="notice"><%= notice %></p>

<p>
  <b>Patient Name:</b>
  <%= @patient.first_name %>
</p>


<%= link_to "Create NEW Visit", create_new_visit_path(), :class => "btn btn-primary"%>

<% if @visits.size > 0 %>
	<h1>Existing Patient Visits: </h1>
	<% @visits.each do |v|%>
		<h2>Visit ID: <%=v.id%></h2>
		<h2>Visited on: <%=v.created_at%></h2>
		<h2>Summary</h2>
	<% end %>
<% else %>
	<h1>No existing Visit of this patient</h1>
<% end %>




