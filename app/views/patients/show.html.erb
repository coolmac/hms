<body id="login" class="animated fadeInDown">
	<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
<div class="table-responsive animated fadeInDown">
  <table id="resultTable" class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="success">
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Patient Type</th>
        <th>Patient IDtype & Number</th>
        <th>Reference Name</th>
        <th>Reference Number</th>
        <th>Emergency Name</th>
        <th>Emergency Number</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @patient.first_name %> <%= @patient.last_name %></td>
          <td><%= @patient.age %></td>
          <td><%= @patient.gender %></td>
          <td><%= @patient.mobile %></td>
          <td><%= @patient.email %></td>
          <td><%= @patient.patient_type %></td>
          <td><%= @patient.id_type %> <%= @patient.id_number %></td>
          <td><%= @patient.reference_name %></td>
          <td><%= @patient.reference_mobile %></td>
          <td><%= @patient.emergency_name %></td>
          <td><%= @patient.emergency_mobile %></td>
        </tr>
    </tbody>
  </table>
</div>
<%= link_to 'Edit Registration Details', edit_patient_path(@patient), :class=>"btn btn-info" %>

<br>
<br>
<br>
<%= link_to "Create NEW Visit", create_new_visit_path(), :class => "btn btn-lg btn-primary active"%>
<br>
<br>

<% if @visits.size > 0 %>
	<h1>Existing Patient Visits: </h1>
	<% i = 0 %>
	<% @visits.each do |v|%>
		<div class="panel panel-default">
		    <div class="panel-heading">
		      <h4 class="panel-title">
		      	Visit ID: <%=v.id%> | <%= link_to "Edit", show_details_path(:visit_id => v.id), :class => "btn btn-primary active"%>
		        <a class="pull-right" data-toggle="collapse" href="#<%=i%>">
		          <i class="fa fa-lg fa-fw fa-align-justify"></i>
		        </a>
		      </h4>
		    </div>
		   <div id=<%=i%> class="panel-collapse collapse">
		      <div class="panel-body">
		      	<h2>Visited on: <%=v.created_at%></h2>
				<h2>Summary</h2>
				<div class="btn btn-success">View Details</div>
		      </div>
		   </div>
		</div>
		<% i = i + 1 %>
	<% end %>

	<% else %>
		<h1>No existing Visit of this patient</h1>
	<% end %>

</div>
</body>