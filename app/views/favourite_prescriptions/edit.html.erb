<div class="smart-form client-form animated fadeInDown" style="padding:20px">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      		<div class="well no-padding">
      			<header>
      				<%= @favourite_prescription.name %>
      			</header>
			</div>
	</div>
	</br>
	</br>

	<div>
  	
  	<table id="resultTable" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Medicine</th>
    	<th>Frequency</th>
    	<th>Duration</th>
    	<th>Route</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<%= form_for([@prescription_medicine.favourite_prescription, @prescription_medicine]) do |f| %>
	    	<tr>
	    		<td>
	    			<%= f.text_field :medicine, :calss => "medicine_input", :style=>"padding:4px;" %>
	    		</td>
	    		<td>
	    			<%= f.text_field :frequency, :list=>"list2", :style=>"padding:4px;", :class=>" medicine_input"  %>
				              <datalist id="list2">
				                <option value="OD">OD</option>
				                <option value="OM">OM</option>
				                <option value="HS">HS</option>
				                <option value="BD">BD</option>
				                <option value="TDS">TDS</option>
				                <option value="QID">QID</option>
				              </datalist>
	    		</td>
	    		<td>
	    			<%= f.text_field :duration, :list=>"list3", :style=>"padding:4px;", :class=>" medicine_input"  %>
				              <datalist id="list3">
				                <option value="1day">1day</option>
				                <option value="2days">2days</option>
				                <option value="3days">3days</option>
				                <option value="4to6days">4-6days</option>
				                <option value="1week">1week</option>
				                <option value="2weeks">2weeks</option>
				                <option value="3weeks">3weeks</option>
				                <option value="1month">1month</option>
				                <option value="2months">2months</option>
				                <option value="3months">3months</option>
				                <option value="6months">6months</option>
				                <option value="1year">1year</option>
				              </datalist>
	    		</td>
	    		<td>
	    			<%= f.text_field :route, :list=>"list4", :style=>"padding:4px;", :class=>" medicine_input"  %>
				              <datalist id="list4">
				                <option value="im">im</option>
				                <option value="iv">iv</option>
				                <option value="po">po</option>
				                <option value="pr">pr</option>
				                <option value="intramuscular">intramuscular</option>
				                <option value="intravenous">intravenous</option>
				                <option value="per-oral">per oral</option>
				                <option value="per-rectal">per rectal</option>
				              </datalist>
	    		</td>
	    		<td>
	    			<input class="btn btn-primary btn-sm" name="commit" type="submit" value="&nbsp;Submit&nbsp;">
	    		</td>
	    	</tr>
	    <%end%>	
	    <% @favourite_prescription.prescription_medicines[0..-2].each do |medicine| %>
	        <tr>
	          <td><div class="edit" name="medicine" id="<%=medicine.id %>"><%=medicine.medicine %></div></td>
	          <td><div class="edit" name="frequency" id="<%=medicine.id %>"><%=medicine.frequency %></div></td>
	          <td><div class="edit" name="duration" id="<%=medicine.id %>"><%=medicine.duration %></div></td>
	          <td><div class="edit" name="route" id="<%=medicine.id %>"><%=medicine.route %></div></td>  
		      <td><%= link_to 'Remove',  favourite_prescription_prescription_medicine_path(@favourite_prescription.id,medicine) , :class => "btn btn-danger btn-sm", :confirm => 'Are you sure?', :method => :delete %></td>
	        </tr>
	    <% end %>
  	</tbody>
    </table>
</div>
</div>

<script>
jQuery(document).ready(function($) {

 $(".edit").each( function(i) {
	fav_id = <%=@prescription_medicine.favourite_prescription.id%>
	medc_id = $(this).attr('id')
    $(this).editable("/favourite_prescriptions/"+fav_id+"/prescription_medicines/"+medc_id, {
  		 method	   : 'PUT',
  		 cssclass  : 'edittable_form_medicine',
  		 style     : 'width:200px;',
  		 id        : 'prescription_medicine[id]',
         name 	   : 'prescription_medicine['+$(this).attr('name')+']',
         cancel    : 'Cancel',
         submit    : 'OK',
         tooltip   : 'Double-click to edit...'
    })
 });
});
</script>