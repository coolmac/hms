<body id="login" class="animated fadeInDown">
    <div id="content" class="container smart-form client-form">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10" style="padding-top:10px">
    <div class="well no-padding">
        <header>
            Formatting basic questions of super category: <%=@super_category%>,  category: <%=@category%>
        </header>
            <%= form_tag pms_history_path(:previous_category => @category, :previous_super_category => @super_category, :category => 'pms_history', :super_category => 'history') do %>
        <fieldset>
            <% @questions.each do |q| %>
              <section>
              <h1><%= label_tag q.title%></h1>
              <br>
              <%= select_tag "#{APP_CONFIG['question_prefix']}#{q.id}", options_from_collection_for_select(@answers, "id", "title", get_selected_answer_id("#{APP_CONFIG['question_prefix']}#{q.id}") ), include_blank: true, :style=>"border-style: solid ; border-width: 5px; border-color: blue;", :rows=>"4", :cols=>"40"%>
              <br>
              <br>
              </section>
            <% end %>

            <% @descriptive_questions.each do |dq| %>
              <section>
                <div class="col-lg-3 col-md-3">
                  <h1><%= label_tag dq.title%></h1>
                </div>
                    <%= text_area_tag "#{APP_CONFIG['descriptive_question_prefix']}#{dq.id}", get_selected_answer_id("#{APP_CONFIG['descriptive_question_prefix']}#{dq.id}"), :style=>"border-style: dotted; border-width: 3px; border-color: blue; resize: none;", :rows=>"2", :cols=>"100", :wrap=>"soft" %>
                    <script type="text/javascript">
                      $("textarea[name='descriptive_question_id_<%=dq.id%>']").on('keyup',function(){
                      $("#review<%=dq.id%>").html($("textarea[name='descriptive_question_id_<%=dq.id%>']").val());
                      });
                    </script>
                    <div id="review<%=dq.id%>" style="border-style:solid; border-width:2px; padding:5px 10px; width:898px"></div>
                  <br>
              </section>
            <% end %>

            <footer>
                <%= submit_tag "Save Details", :name => 'save', :class => "btn btn-primary" %>
                <%= submit_tag "Save and Next", :name => 'next', :class => "btn btn-success" %>
                <%= submit_tag "Save and Return", :name => 'exit', :class => "btn btn-info" %>
            </footer>
            <% end %>
        </fieldset>
    </div>
</div>