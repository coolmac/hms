<div id="login" class=" animated fadeInDown">
  <div id="content" class="smart-form client-form">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10" style="padding-top:10px">
      <div class="well no-padding">
        <header>
          Formatting basic questions of super category: <%=@super_category%>,  category: <%=@category%>
        </header>
          <%= form_tag ps_history_path(:previous_category => @category, :previous_super_category => @super_category, :category => 'ps_history', :super_category => 'history') do %>
          <fieldset>
            <section>
            <h3><%= label_tag 'description', 'Description' %></h3>
            <%= text_area_tag :fms_history, @current_visit.fms_history, :autofocus => true, :class=>"dashed-input1 col-lg-12 col-md-12 col-sm-12 col-xs-12", rows:4 %>
            </section>
            <br>
            <br>
            <br>
            <br>
            <%= render 'form' %>
          </fieldset>
          <% end %>
      </div>
    </div>
  </div>
</div>